@page 
@model WebApplication1.Pages.Studentp.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}
<html>
@*page kısmının yanına gelen "{id:int}" int türünde parametre zorunlu tutar*@
<head>
</head>
<body>
    <h1>Students</h1>
    <table class="table table-dark table-hover">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Class</th>
        </tr>
        @foreach (var x in Model.students)
        {
            <tr>
                <td>@x.StudentId</td>
                <td>@x.StudentName</td>
                <td>@x.StudentClass</td>
            </tr>
        }
    </table>
    <br />
    <br />
    <br />
    <form method="post" >
       Id : <input class="form-control" asp-for="studentt.StudentId" /><br />
        Name : <input class ="form-control" asp-for="studentt.StudentName" /><br />
        Surname : <input class="form-control" asp-for="studentt.StudentClass" />
        <input class="btn btn-success" type="submit" />
    </form>
</body>
</html>

